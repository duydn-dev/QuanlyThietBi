{
  "AppSettings": {
    "ServerRender": false,
    "Debug": true,
    "Version": "1.0.0.5",
    "Https": true,
    "Namespace": "O2",
    "Domain": "http://cms.o2tech.vn",
    "ApiUrl": "http://system-api.o2tech.vn"
  },
  "Logging": {
    "IncludeScopes": true,
    "LogLevel": {
      "Default": "Information",
      "System": "Information",
      "Microsoft": "Error"
    },
    "Console": {
      "LogLevel": {
        "Microsoft.AspNetCore.NodeServices": "Information",
        "Default": "Error"
      }
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Error",
        "System": "Error"
      }
    },
    "Properties": {
      "Application": "Dekiru.Exam"
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Logs\\custom_log.txt",
          "rollingInterval": "Hour",
          "outputTemplate": "{Timestamp:dd-MM-yyyy HH:mm:ss} [{Level}] {Message}{NewLine}{Exception}"
        }
      }
    ]
  }
}
